# aliases

alias k='kubectl'
alias kindmeup='kubectl config use-context kind-kind'
alias ll='ls -lahG'
alias vim='nvim'
alias allowthat='sudo xattr -r -d com.apple.quarantine'
alias kw='kubectl --kubeconfig /home/eking/workspace/poc-demo/workloads.kubeconfig'
alias ks='kubectl --kubeconfig /home/eking/workspace/poc-demo/services.kubeconfig'
alias kc='kubectl --kubeconfig /home/eking/workspace/poc-demo/control.kubeconfig'

# path
export PATH="$PATH:$HOME/go/bin:/usr/local/kubebuilder/bin:$HOME/.cargo/bin:${HOME}/.krew/bin"

# editor
export EDITOR="/usr/bin/nvim"

# bash-completion
[[ -r "/usr/local/etc/profile.d/bash_completion.sh" ]] && . "/usr/local/etc/profile.d/bash_completion.sh"

# direnv
eval "$(direnv hook bash)"

# gnu-sed
export PATH="/usr/local/opt/gnu-sed/libexec/gnubin:$PATH"

# lastpass CLI timeout
export LPASS_AGENT_TIMEOUT=43200

# private
if [ -f ~/.bash_private ]; then
   source ~/.bash_private
fi

[ -f ~/.fzf.bash ] && source ~/.fzf.bash
